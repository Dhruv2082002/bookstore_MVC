@model Category

<form method="post">
    <input asp-for="CategoryId" hidden />
    <div class="border mt-4 p-3">
        <h2 class="text-primary">Edit Category</h2>
        <hr />
    </div>
    <div asp-validation-summary="All"></div>
    <div class="mb-3">
        <label asp-for="Name" class="text-primary"></label>
        <input asp-for="Name" type="text" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="DisplayOrder" class="text-primary"></label>
        <input asp-for="DisplayOrder" class="form-control" />
        <span asp-validation-for="DisplayOrder" class="text-danger"></span>

    </div>
    <button type="submit" class="btn btn-primary">Update</button>
    <a class="btn btn-secondary" asp-controller="Category" asp-action="Index">Back to list</a>

</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
